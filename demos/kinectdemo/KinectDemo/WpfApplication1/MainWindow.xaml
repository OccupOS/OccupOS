<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:WpfViewers="clr-namespace:Microsoft.Samples.Kinect.WpfViewers;assembly=Microsoft.Samples.Kinect.WpfViewers" x:Class="KinectDemo.MainWindow"
        Title="MainWindow" Height="350" Width="525" Loaded="Window_Loaded" Closed="Closing">
    <Grid HorizontalAlignment="Left" Width="517" Margin="0,9,0,-9">

        <WpfViewers:KinectSensorChooser x:Name="KSChooser" HorizontalAlignment="Left" Margin="206,85,0,0" VerticalAlignment="Top" Height="168" Width="226"/>
        <Image x:Name="ImageFrame" HorizontalAlignment="Left" Height="240" VerticalAlignment="Top" Width="320" Margin="175,41,0,0"/>
        <WpfViewers:KinectColorViewer x:Name="ColourViewer" HorizontalAlignment="Left" Height="120" Margin="10,41,0,0" VerticalAlignment="Top" Width="160" Kinect="{Binding Kinect, ElementName=KSChooser}"/>
        <Label x:Name="ColourViewerLabel" Content="Raw Image/Depth Image:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="160"/>
        <Label x:Name="ImageFrameLabel" Content="Player Tracking:                  Found:" HorizontalAlignment="Left" Margin="175,10,0,0" VerticalAlignment="Top" Width="195"/>
        <TextBox x:Name="PlayersFoundBox" HorizontalAlignment="Left" Height="23" Margin="375,10,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120" IsReadOnly="True"/>
        <TextBox x:Name="Player1XBox" HorizontalAlignment="Left" Height="23" Margin="50,183,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsReadOnly="True"/>
        <TextBox x:Name="Player1YBox" HorizontalAlignment="Left" Height="23" Margin="50,206,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsReadOnly="True"/>
        <TextBox x:Name="Player2YBox" HorizontalAlignment="Left" Height="23" Margin="50,258,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsReadOnly="True"/>
        <TextBox x:Name="Player2XBox" HorizontalAlignment="Left" Height="23" Margin="50,234,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsReadOnly="True"/>
        <Label Content="X:" HorizontalAlignment="Left" Margin="25,183,0,0" VerticalAlignment="Top"/>
        <Label Content="Y:" HorizontalAlignment="Left" Margin="25,203,0,0" VerticalAlignment="Top"/>
        <Label Content="X:" HorizontalAlignment="Left" Margin="25,234,0,0" VerticalAlignment="Top"/>
        <Label Content="Y:" HorizontalAlignment="Left" Margin="25,255,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
